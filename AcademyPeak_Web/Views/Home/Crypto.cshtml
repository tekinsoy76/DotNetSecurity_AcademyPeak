@model AcademyPeak_Web.Models.CryptoModel

@{
    ViewData["Title"] = "Crypto";
}

<h1>Crypto</h1>

<h4>CryptoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crypto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Word" class="control-label"></label>
                <input asp-for="Word" class="form-control" />
                <span asp-validation-for="Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>Sonuc: @ViewBag.Sonuc</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
